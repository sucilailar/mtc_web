<%= render 'layouts/header_adm'%>

<br><br>
<h1 style="text-align: center;">Geup</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <% if notice.present?%>
      <p style="text-align: center" id="notice" class="alert alert-danger"><%= notice %></p>
    <%end%>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'Buat Geup', new_geup_path, class: "btn btn-primary float-right mb-2" %>
      <table class="table mx-auto">
        <thead class="thead-dark">
          <tr>
            <th>Geup</th>
            <th>Warna</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>      

        <tbody>
          <% @geups.each do |geup| %>
            <tr>
              <td><%= geup.geup %></td>
              <td><%= geup.warna_string %></td>
              <td><%= link_to 'Show', geup %></td>
              <td><%= link_to 'Edit', edit_geup_path(geup) %></td>
              <td><%= link_to 'Destroy', geup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>      

      <br>      

  </div>
</div>