<h1 style="text-align: center;">Kas SMP Wanasalam</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <% if notice.present?%>
      <p style="text-align: center" id="notice" class="alert alert-danger"><%= notice %></p>
    <%end%>
    </div>
  </div>
   <div class="row">
    <div class="col-sm-10">
      <%= link_to 'New Kas SMP', new_kas_smp_path, class: "btn btn-primary float-right"  %><br><br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Keterangan</th>
            <th>Debit</th>
            <th>Kredit</th>
            <th>Saldo</th>
            <th>Bendahara</th>
            <th colspan="3"></th>
          </tr>
        </thead>      

        <tbody>
          <% @kas_smps.each do |kas_smp| %>
            <tr>
              <td><%= kas_smp.keterangan %></td>
              <td><%= kas_smp.debit %></td>
              <td><%= kas_smp.kredit %></td>
              <td><%= kas_smp.saldo %></td>
              <td><%= kas_smp.akun.nama %></td>
              <td><%= link_to 'Show', kas_smp %></td>
              <td><%= link_to 'Edit', edit_kas_smp_path(kas_smp) %></td>
              <td><%= link_to 'Destroy', kas_smp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<br>


  </div>
</div>