<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1 style="text-align: center;">Kas SMP</h1>
        <%= form_with(model: kas_smp, local: true) do |form| %>
          <% if kas_smp.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(kas_smp.errors.count, "error") %> prohibited this kas_smp from being saved:</h2>        

              <ul>
              <% kas_smp.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>       

          <div class="field">
            <%= form.label :keterangan %>
            <%= form.text_field :keterangan , class:"form-control" %>
          </div>        

          <div class="field">
            <%= form.label :debit %>
            <%= form.text_field :debit , class:"form-control" , value: 0.0 %>
          </div>        

          <div class="field">
            <%= form.label :kredit %>
            <%= form.text_field :kredit, class:"form-control" , value: 0.0 %>
          </div>
          <p class="text-danger">        
          Note: Debit dan Kredit tidak boleh kosong</p>
          <div class="actions">
            <%= form.submit class: 'btn btn-primary float-right mt-2' %>
             <%= link_to 'Batal', kas_smps_path , class: 'btn btn-danger float-right mr-2 mt-2'%>
          </div>
        <% end %>
    </div>
  </div>
</div>