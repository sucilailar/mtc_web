

<h1 style="text-align: center;" class="mt-5">Absensi MTC</h1>
<div class="container">

  <div class="row">
    <div class="col-sm-12">
    <% if notice.present?%>
      <p style="text-align: center" id="notice" class="alert alert-danger"><%= notice %></p>
    <%end%>
    </div>
  </div>
   <div class="row">
    <div class="col-sm-12">
    <%= link_to 'New Akun', new_absensi_path, class: "btn btn-primary float-right" %><br><br>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-10 ">
      <br><br>
      <table class="table ml-10">
        <thead class="thead-dark">
          <tr>
            <th>Akun</th>
            <th>Tgl</th>
            <th>Keterangan</th>
            <th>Dojang</th>
            <th>Id sekretaris</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>      

        <tbody>
          <% @absensis.each do |absensi| %>
            <tr>
              <td><%= absensi.akun_id %></td>
              <td><%= absensi.tgl %></td>
              <td><%= absensi.keterangan %></td>
              <td><%= absensi.dojang_id %></td>
              <td><%= absensi.id_sekretaris %></td>
              <td><%= link_to 'Show', absensi %></td>
              <td><%= link_to 'Edit', edit_absensi_path(absensi) %></td>
              <td><%= link_to 'Destroy', absensi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
<br>

</div>
</div>