<%= render 'layouts/header_adm'%>

<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Kas MTC</h1>
<div class="container">
   <div class="row">
     <div class="col-sm-2">
      <div class="list-group">
        <a href="#" class="list-group-item "><span>Kas SMA</span></a>
        <a href="#" class="list-group-item active"> <span>Kas SMP</span></a>
        <a href="#" class="list-group-item"> <span>Kas Club</span></a>
        <a href="#" class="list-group-item"> <span>Kas Umum</span></a>
      </div>
    </div>

    <div class="col-sm-8">    
      <%= link_to 'Input Kas', new_ka_path, class: "btn btn-primary float-right"  %> <br><br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Keterangan</th>
            <th>Debit</th>
            <th>Kredit</th>
            <th>Saldo</th>
            <th>Bendahara</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>      

        <%= form_with(model: ka, local: true) do |form| %>
  <% if ka.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ka.errors.count, "error") %> prohibited this ka from being saved:</h2>

      <ul>
      <% ka.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <tr>
      <td><%= form.text_field :keterangan %></td>
      <td><%= form.text_field :debit %></td>
      <td><%= form.text_field :kredit %></td>
      <td><%= form.text_field :saldo %></td>
      <td><%= form.number_field :bendahara_id %></td>
      <th colspan="3"><%= form.submit %></th>
      
    </tr>
<% end %>


        <tbody>
          <% @kas.each do |ka| %>
            <tr>
              <td><%= ka.keterangan %></td>
              <td><%= ka.debit %></td>
              <td><%= ka.kredit %></td>
              <td><%= ka.saldo %></td>
              <td><%= ka.bendahara_id %></td>
              <td><%= link_to 'Show', ka %></td>
              <td><%= link_to 'Edit', edit_ka_path(ka) %></td>
              <td><%= link_to 'Destroy', ka, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>

   <div class="col-sm-2">
    Total kas: Rp. 00000  
   </div>
  <br>

  </div>
</div>