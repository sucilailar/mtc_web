<h1 style="text-align: center;">Kas Umum</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <% if notice.present?%>
        <p style="text-align: center" id="notice" class="alert alert-success"><%= notice %></p>
      <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">     
      <%= link_to 'Edit', edit_ka_path(@ka), class: 'btn btn-warning float-right ml-2 mb-2' %> 
      <%= link_to 'Back', kas_path , class: 'btn btn-primary float-right mb-2'%>
      <table class="table mx-auto">
        <tr>
          <td>Keterangan</td>
          <td>:</td>
          <td><%= @ka.keterangan %></td>
        </tr>
        <tr>
          <td>Debit</td>
          <td>:</td>
          <td><%= @ka.debit %></td>
        </tr>
        <tr>
          <td>Kredit</td>
          <td>:</td>
          <td><%= @ka.kredit %></td>
        </tr>
        <tr>
          <td>Bendahara</td>
          <td>:</td>
          <td><%= @ka.akun.nama %></td>
        </tr>
      </table>
</div>
</div>
</div>