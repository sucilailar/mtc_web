<%= render 'layouts/header_adm'%>
<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Pembayaran</h1>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
</head>

<div class="container">
   <div class="row">
    <div class="col-sm-2">
      <div class="list-group">
        <a href="#" class="list-group-item "><span>belum menemukan menu</span></a>
        <a href="#" class="list-group-item active"> <span>Form UKT</span></a>
        <a href="#" class="list-group-item"> <span>Jadwal UKT</span></a>
      </div>
    </div>
     <div class="col-sm-10">

      <%= link_to 'Input Pembayaran', new_pembayaran_path , class: "btn btn-primary float-right"%> <br><br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Akun</th>
            <th>Kategori kegiatan</th>
            <th>Nominal</th>
            <th>Cicilan</th>
            <th>Keterangan</th>
            <th>Id bendahara</th>
            <th colspan="3"></th>
          </tr>
        </thead>      

        <tbody>
          <% @pembayarans.each do |pembayaran| %>
            <tr>
              <td><%= pembayaran.akun_id %></td>
              <td><%= pembayaran.kategori_kegiatan_id %></td>
              <td><%= pembayaran.nominal %></td>
              <td><%= pembayaran.cicilan %></td>
              <td><%= pembayaran.keterangan %></td>
              <td><%= pembayaran.id_bendahara %></td>
              <td><%= link_to 'Show', pembayaran %></td>
              <td><%= link_to 'Edit', edit_pembayaran_path(pembayaran) %></td>
              <td><%= link_to 'Destroy', pembayaran, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<br>

  </div>
</div>