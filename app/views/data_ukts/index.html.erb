<%= render 'layouts/header_adm'%>
<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Data UKT MTC</h1>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
</head>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'New Data Ukt', new_data_ukt_path , class: "btn btn-primary float-right" %> <br><br>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <div class="list-group">
        <a href="#" class="list-group-item "><span>blm ditemukan menu yg cocok</span></a>
        <a href="#" class="list-group-item active"> <span>Form UKT</span></a>
        <a href="#" class="list-group-item"> <span>Jadwal UKT</span></a>
      </div>
    </div>
    
    <div class="col-sm-10">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Periode</th>
            <th>Sabuk Putiih</th>
            <th>Sabuk Kuning Polos</th>
            <th>Sabuk Kuning Strip</th>
            <th>Sabuk Hijau Polos</th>
            <th>Sabuk Hijau Strip</th>
            <th>Sabuk Biru Polos</th>
            <th>Sabuk Biru Strip</th>
            <th>Sabuk Merah Polos</th>
            <th>Sabuk Merah Strip 1</th>
            <th>Sabuk Merah Strip 2</th>
            <th>Jumlah</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>      

        <tbody>
          <% @data_ukts.each do |data_ukt| %>
            <tr>
              <td><%= data_ukt.periode %></td>
              <td><%= data_ukt.sabuk_putih %></td>
              <td><%= data_ukt.sabuk_kuning_polos %></td>
              <td><%= data_ukt.sabuk_kuning_strip %></td>
              <td><%= data_ukt.sabuk_hijau_polos %></td>
              <td><%= data_ukt.sabuk_hijau_strip %></td>
              <td><%= data_ukt.sabuk_biru_polos %></td>
              <td><%= data_ukt.sabuk_biru_strip %></td>
              <td><%= data_ukt.sabuk_merah_strip_satu %></td>
              <td><%= data_ukt.sabuk_merah_strip_dua %></td>
              <td><%= data_ukt.jumlah %></td>
              <td><%= link_to 'Show', data_ukt %></td>
              <td><%= link_to 'Edit', edit_data_ukt_path(data_ukt) %></td>
              <td><%= link_to 'Destroy', data_ukt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>
</div>