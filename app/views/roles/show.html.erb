
<br><br>
<h1 style="text-align: center;">Role Akun MTC</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <% if notice.present?%>
        <p style="text-align: center" id="notice" class="alert alert-success"><%= notice %></p>
      <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <table class="table mx-auto">
      	<tr>
      		<td>Role</td>
      		<td>:</td>
      		<td><%= @role.nama_role %></td>
      	</tr>

			</table>
			<%= link_to 'Edit', edit_role_path(@role), class: 'btn btn-warning float-right ml-4' %> 
			<%= link_to 'Back', roles_path , class: 'btn btn-primary float-right' %>
		</div>
	</div>
</div>