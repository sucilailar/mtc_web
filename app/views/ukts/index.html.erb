<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Daftar Peserta UKT</h1>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
</head>

<div class="container">
   <div class="row">
    <div class="col-sm-2">
      <div class="list-group">
        <a href="#" class="list-group-item "><span>Riwayat UKT saya</span></a>
        <a href="#" class="list-group-item active"> <span>Form UKT</span></a>
        <a href="#" class="list-group-item"> <span>Jadwal UKT</span></a>
      </div>
    </div>

    <div class="col-sm-10">
      <%= link_to 'Daftar UKT', new_ukt_path, class: "btn btn-primary float-right" %>
      <p>
  Sort by:
  <%= link_to 'Geup', new_ukt_path %> |
  <%= link_to 'Periode', new_ukt_path %> |
  <%= link_to 'Nama', new_ukt_path %>
</p>
      <br><br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Nama</th>
            <th>Tempat</th>
            <th>Tgl lahir</th>
            <th>No reg</th>
            <th>Foto</th>
            <th>Geup</th>
            <th>Sabuk</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @ukts.each do |ukt| %>
            <tr>
              <td><%= ukt.nama %></td>
              <td><%= ukt.tempat %></td>
              <td><%= ukt.tgl_lahir %></td>
              <td><%= ukt.no_reg %></td>
              <td> <%= image_tag ukt.foto.url if ukt.foto? %></td>

              <td><%= ukt.geup %></td>
              <td><%= ukt.sabuk %></td>
              <td><%= link_to 'Show', ukt %></td>
              <td><%= link_to 'Edit', edit_ukt_path(ukt) %></td>
              <td><%= link_to 'Destroy', ukt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
</div>
