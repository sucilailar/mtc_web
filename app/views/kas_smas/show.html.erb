<h1 style="text-align: center;">Kas SMA</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <% if notice.present?%>
        <p style="text-align: center" id="notice" class="alert alert-success"><%= notice %></p>
      <%end%>
    </div>
</div>
    <div class="row">
        <div class="col-sm-12">
		  <%= link_to 'Edit', edit_kas_sma_path(@kas_sma), class: 'btn btn-warning float-right ml-2 mb-2'%> 
    	   <%= link_to 'Back', kas_smas_path, class: 'btn btn-primary float-right mb-2' %>
        	<table class="table mx-auto">
    		<tr>
    			<td>Keterangan</td>
    			<td>:</td>
    			<td><%= @kas_sma.keterangan %></td>
    		</tr>
    		<tr>
    			<td>Debit</td>
    			<td>:</td>
    			<td><%= @kas_sma.debit %></td>
    		</tr>
    		<tr>
    			<td>Kredit</td>
    			<td>:</td>
    			<td><%= @kas_sma.kredit %></td>
    		</tr>
    		<tr>
    			<td>Saldo</td>
    			<td>:</td>
    			<td><%= @kas_sma.saldo %></td>
    		</tr>

		</table>
	</div>
</div>
